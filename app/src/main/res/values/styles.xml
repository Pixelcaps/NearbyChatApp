<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#344955</item>
        <item name="android:colorAccent">#F9AA33</item>
        <item name="android:textColor">#232F34</item>
    </style>

    <style name="LoginActivityTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">#344955</item>
        <item name="android:colorAccent">#F9AA33</item>
        <item name="android:textColor">#232F34</item>
    </style>

    <style name="ChatRoomActivityTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">#344955</item>
        <item name="android:colorAccent">#F9AA33</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/SecondaryColorOrange</item>
        <item name="colorAccent">@color/PrimaryColorBlue</item>
    </style>

</resources>
